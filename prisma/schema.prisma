generator client {
  provider        = "prisma-client-js"
  // output   = "../src/generated/client"
  previewFeatures = ["fullTextSearchPostgres"]
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String         @id @default(uuid()) @db.Uuid
  firstName         String
  email             String
  workosId          String         @unique
  profilePictureUrl String?
  bio               String?
  location          String?
  website           String?
  username          String         @unique
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  /// [UserLocaleSettingsType]
  localeSettings    Json           @default("{ \"distance\": \"km\", \"time\":12 }")
  projects          Project[]
  pins              Pin[]
  routes            Route[]
  projectShares     ProjectShare[]
}

model Project {
  id            String         @id @default(uuid()) @db.Uuid
  slug          String         @unique
  name          String
  description   String?
  public        Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  userId        String         @db.Uuid
  user          User           @relation(fields: [userId], references: [id])
  pins          Pin[]
  routes        Route[]
  projectShares ProjectShare[]
}

model ProjectShare {
  id        String  @id @default(uuid()) @db.Uuid
  canEdit   Boolean
  project   Project @relation(fields: [projectId], references: [id])
  projectId String  @db.Uuid
  user      User    @relation(fields: [userId], references: [id])
  userId    String  @db.Uuid
}

model Pin {
  id               String    @id @default(uuid()) @db.Uuid
  appleMapsMuid    String?
  mapboxFeatureId  String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  type             String
  userId           String    @db.Uuid
  user             User      @relation(fields: [userId], references: [id])
  projectId        String    @db.Uuid
  project          Project   @relation(fields: [projectId], references: [id])
  dateStart        DateTime?
  zoneName         String    @default("utc")
  // timeStart        Int?
  duration         Int?
  latitude         Float
  longitude        Float
  name             String
  /// [PlaceExtendedMetadataType]
  extendedMetadata Json?
  /// [PinStyleType]
  styleData        Json?
}

model Route {
  id                     String    @id @default(uuid()) @db.Uuid
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  userId                 String    @db.Uuid
  user                   User      @relation(fields: [userId], references: [id])
  projectId              String    @db.Uuid
  project                Project   @relation(fields: [projectId], references: [id])
  dateStart              DateTime?
  zoneStart              String    @default("utc")
  zoneEnd                String    @default("utc")
  duration               Int?
  segments               Json
  /// [RouteStyleType]
  styleData              Json?
  originLat              Float
  originLng              Float
  destLat                Float
  destLng                Float
  originName             String
  destName               String
  name                   String    @default("New Route")
  originAppleMapsMuid    String?
  destAppleMapsMuid      String?
  originMapboxFeatureId  String?
  destMapboxFeatureId    String?
  /// [PlaceExtendedMetadataType]
  originExtendedMetadata Json?
  /// [PlaceExtendedMetadataType]
  destExtendedMetadata   Json?
  modality               String
}
